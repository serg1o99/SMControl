<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_1</item>
        <item name="colorPrimaryDark">@color/hint</item>
        <item name="colorPrimaryVariant">@color/teal_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/reem_kufi</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#41A888</item>
        <item name="colorSecondaryVariant">@color/hint</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30dp</item>
        <item name="fontFamily">@font/reem_kufi</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>