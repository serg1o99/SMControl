<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Gestionar_salida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:backgroundTint="#090909"
    tools:context="negocio.GestionarSalidas"
    android:fitsSystemWindows="true"
    >

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view_gsal"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu_almacenero"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar_gsal"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:contentInsetStartWithNavigation="0dp"
                app:navigationIconTint="@color/white"
                app:popupTheme="@style/Theme.SMControl"
                app:title="@string/gestionar_salida"
                app:titleTextAppearance="@style/Toolbar.TitleText"
                app:titleTextColor="@color/white">

            </com.google.android.material.appbar.MaterialToolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:hint="Empleado"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/teal_1"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconTint="@color/teal_1"
                    app:hintTextColor="@color/hint"
                    app:startIconDrawable="@drawable/person_outline"
                    app:startIconTint="@color/teal_1">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_cod_empleado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/reem_kufi"
                        android:inputType="text"
                        android:editable="false"
                        android:enabled="false"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:hint="Ingrese codigo"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/teal_1"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconTint="@color/teal_1"
                    app:hintTextColor="@color/hint"
                    app:startIconDrawable="@drawable/person_outline"
                    app:startIconTint="@color/teal_1">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_cod_salida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/reem_kufi"
                        android:inputType="number"
                        android:textColor="@color/black" />


                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="codigo"
                        android:layout_marginRight="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/teal_1"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconTint="@color/teal_1"
                        app:hintTextColor="@color/hint"
                        app:startIconDrawable="@drawable/person_outline"
                        app:startIconTint="@color/teal_1"
                        android:layout_weight="1"
                        >


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_cod_prod"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/reem_kufi"
                            android:inputType="text"
                            android:editable="false"
                            android:enabled="false"
                            android:textColor="@color/black" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="Nombre producto"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/teal_1"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconTint="@color/teal_1"
                        app:hintTextColor="@color/hint"
                        app:startIconDrawable="@drawable/person_outline"
                        app:startIconTint="@color/teal_1"
                        android:layout_weight="1.5">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_nom_prod"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/reem_kufi"
                            android:inputType="text"
                            android:editable="false"
                            android:enabled="false"
                            android:textColor="@color/black" />


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="Stock"
                        android:layout_marginRight="10dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/teal_1"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconTint="@color/teal_1"
                        app:hintTextColor="@color/hint"
                        app:startIconDrawable="@drawable/person_outline"
                        app:startIconTint="@color/teal_1"
                        android:layout_weight="1"
                        >


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_stocks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/reem_kufi"
                            android:inputType="text"
                            android:editable="false"
                            android:enabled="false"
                            android:textColor="@color/black" />


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="Ingrese cantidad"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/teal_1"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconTint="@color/teal_1"
                        app:hintTextColor="@color/hint"
                        app:startIconDrawable="@drawable/person_outline"
                        app:startIconTint="@color/teal_1"
                        android:layout_weight="1.5">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_cantidad_salidas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/reem_kufi"
                            android:inputType="number"
                            android:textColor="@color/black" />


                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:hint="Ingrese fecha de salida"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxStrokeColor="@color/teal_1"
                    app:boxStrokeWidthFocused="2dp"
                    app:endIconTint="@color/teal_1"
                    app:hintTextColor="@color/hint"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/teal_1">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_fecha_salida"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableStart="@drawable/person_outline"
                        android:fontFamily="@font/reem_kufi"
                        android:inputType="text"
                        android:textColor="@color/black" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:hint="Ingrese descripcion"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/teal_1"
                        app:boxStrokeWidthFocused="2dp"
                        app:endIconTint="@color/teal_1"
                        app:hintTextColor="@color/hint"
                        app:startIconDrawable="@drawable/person_outline"
                        app:startIconTint="@color/teal_1">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/txt_descripcion_salida"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/reem_kufi"
                            android:inputType="text"
                            android:textColor="@color/black" />


                    </com.google.android.material.textfield.TextInputLayout>


                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_procesar_salida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="55dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#F44336"
                    android:fontFamily="@font/reem_kufi"
                    android:onClick="procesarSalida"
                    android:text="PROCESAR SALIDA"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:backgroundTint="#F44336"
                    app:cornerRadius="8dp"
                    android:layout_weight="1"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>